<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/default.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://kit.fontawesome.com/16f6cfa047.js" crossorigin="anonymous"></script>

    <title>Covid19genix</title>
</head>
<body class="bg-white">
    <!--Navigation bar-->
    {{>navbar}}

    <!--container-->
    <div class="container mt-5 bg-white text-dark">

    <!--country name-->
    <div class="text-center">
        <img class="covid19-logo-main-gif" src="./img/corona-virus.gif" alt="..." class="rounded">
        <p id="country-name" class="h1 font-weight-bold mb-5">SELECT A COUNTRY</p> <!--dynamic data-->
    </div>

    <div class="country-summary">
            <select class="form-control " id="countries">
                <option>--Choose a country--</option>
                <!--Name of countries go here-->
            </select>


            <div class="case-summary animate__animated animate__fadeInUp mt-4">
                <h3><span class="font-weight-bold text-warning ">Total Confirmed:</span><span class="tconfirmed ml-3"> 0</span></h3>

                <h3><span class="font-weight-bold text-success ">Total Recovered:</span><span class="trecovered ml-3"> 0</span></h3>

                <h3><span class="font-weight-bold text-danger ">Total Deaths:</span><span class="tdeaths ml-3"> 0</span></h3>

                <h3><span class="font-weight-bold ">Last Update:</span><span class="lupdate ml-3"> 00/00/0000</span></h3>

                <button id="more-details-btn" class="btn btn-primary mt-3 float-right" type="submit">More details</button>
            </div>
        </div>
    </div>

    {{>modal}}
    
    <script type="module" src="./js/main.js"></script>
    <script type="module" src="./js/loadCountriesAjax.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    
</body>
</html>